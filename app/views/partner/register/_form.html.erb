<%= simple_form_for @partner, :url => url, :wrapper => "inline" do |f| %>
<%= render 'commons/error_notification', :f => f %>
<div id="partner_new">
    <div class="column vertical">
        <%= f.input :name, :label => 'Company/Partner Name' %>
        <%= f.input :address %>
        <%= f.input :zip %>
        <%= f.input :city %>
        <%= f.input :country %>
    </div>

    <div class="column">
        <%= f.input :contact_im %>
        <%= f.fields_for :user, :wrapper => "inline" do |fu| %>
            <%= fu.input :email, :label => t('commons.email') %>
            <%= fu.input :password, :label => t('commons.password'), :input_html => {:autocomplete => 'off'} %>
            <%= fu.input :password_confirmation, :label => "#{t('commons.password_confirmation')}", :input_html => {:autocomplete => 'off'} %>
        <% end %>
    </div>
    <div class="clearfloats"></div>
    <div class="bottom_holder">
        <%= f.input :tax_code, :label => 'TVA/Tax Code' %>
        <%= f.input :paypal_account %>
    </div>

    <div class="actions clearfloats">
        <%= f.button :submit, 'Save', :class => 'success' %> |
        <%= link_to t("commons.back"), back_url %>
    </div>
</div>
<% end %>
