<div class="page-header">
  <h1>
    <%= t("publisher.email.resend_confirmation")%>
  </h1>
</div>

<%= form_tag resend_confirmation_email_send_path do %>

<div class="clearfix">
  <%= label_tag :email, t("commons.email") %>
  <div class="input">
     <%= text_field_tag :email, params[:email], {:class => "xlarge", :autocomplete => 'off'} %>
  </div>
</div>

<div class="actions">
    <%= submit_tag(t("commons.buttons.send"), { :class => 'btn primary' }) %> | 
    <%= link_to t("commons.back"), get_login_path %>
</div>
<% end %>