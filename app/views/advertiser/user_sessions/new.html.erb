<div class="page-header">
  <h1>
    <%=I18n.t("login.login")%>
  </h1>
</div>
<div>
  <%= form_for([:advertiser, @user_session]) do |f| %>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
         <%= f.text_field :email, {:class => "xlarge"} %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
         <%= f.password_field :password, {:class => "xlarge"} %>
      </div>
    </div>
    <div class="clearfix">
      <label for="remember_id"><%= t("login.remember_me") %></label>
      <div class="input">
        <%= f.check_box :remember_me, :id => "remember_id" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit(t("commons.buttons.login"), { :class => 'btn primary' }) %>
    </div>
  <% end %>
</div>
