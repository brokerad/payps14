<div class="page-header">
  <h1>Campaigns reports</h1>
</div>

<table class="zebra-striped">
  <thead>
    <tr>
      <th>Campaign Name</th>
      <th>Active</th>
      <th>Start</th>
      <th>End</th>
      <th>Ads</th>
      <th>Publishers</th>
      <th>Clicks</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= link_to campaign.name, advertiser_campaign_dashboard_reports_path(campaign) %></td>
        <td><%= t("commons.active.#{campaign.active?}") %></td>
        <td><%= l campaign.start_date, :format => t("date.formats.default") %></td>
        <td><%= l campaign.end_date, :format => t("date.formats.default") %></td>
        <td><%= campaign.ads.count %></td>
        <td><%= campaign.publishers.count %></td>
        <td><%= campaign.clicks_count %></td>
        <td><%= link_to currency_format(campaign.amount), advertiser_campaign_dashboard_reports_path(campaign), :class => "btn success" %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
