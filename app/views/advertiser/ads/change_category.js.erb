var error   = "<div class='alert-message error'><a class='close' href='#'>x</a>An error occured while changing category</div>"
var success = "<div class='alert-message success'><a class='close' href='#'>x</a>Category was changed successfully</div>"

$('.alert-message').fadeOut();

<% if @error %>
  $('.page-header').before(error);
<% else %>
  $('.page-header').before(success);
<% end %>
