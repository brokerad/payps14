<div class="page-header">
  <h1><%= t("term.listing.title") %> <small><%= link_to 'New', new_admin_term_path %></small></h1>
</div>

<table class="zebra-striped">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.term.title") %></th>
      <th width="150"></th>
      <th width="150"></th>
    </tr>
  </thead>
  <tbody>
    <% @terms.each do |term| %>
      <tr>
         <td><%= term.title %></td>
        <td><%= link_to t("commons.show"), admin_term_path(term), :class => "btn" %>&nbsp;<%= link_to t("commons.edit"), edit_admin_term_path(term), :class => "btn" %></td>
        <td><%= enable_term_button(term) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
