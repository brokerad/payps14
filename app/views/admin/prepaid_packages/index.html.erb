<div class="page-header">
  <h1>Prepaid Packages <small><%= link_to t("commons.new"), new_admin_prepaid_package_path %></small></h1>
</div>

<table class="zebra-striped">
  <thead>
    <tr>
      <th>Package Code</th>
      <th>Price</th>
      <th>Budget</th>
      <th><%= t("activerecord.attributes.prepaid_package.active") %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @prepaid_packages.each do |prepaid_package| %>
      <tr>
        <td><%= prepaid_package.package_code %></td>
        <td><%= prepaid_package.price %></td>
        <td><%= prepaid_package.budget %></td>
        <td><%= t("commons.active.#{prepaid_package.active?}") %></td>
        <td><%= link_to 'Edit', edit_admin_prepaid_package_path(prepaid_package) %></td>
        <td><%= link_to 'Destroy', [:admin, prepaid_package], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
